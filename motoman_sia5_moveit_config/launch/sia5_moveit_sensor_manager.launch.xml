<launch>  
  <arg name="use_depth_sensor" default="false"/>
  
  <rosparam command="load" file="$(find motoman_sia5_moveit_config)/config/kinect2.yaml"
			if="$(arg use_depth_sensor)"/>
  <param name="octomap_frame" type="string" value="kinect2_link"
		 if="$(arg use_depth_sensor)"/>
  <param name="octomap_resolution" type="double" value="0.05"
		 if="$(arg use_depth_sensor)"/>
  <param name="max_range" type="double" value="4.5"
		 if="$(arg use_depth_sensor)"/>
</launch>
