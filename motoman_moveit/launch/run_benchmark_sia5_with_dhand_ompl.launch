<launch>

  <!-- This argument must specify the list of .cfg files to process for benchmarking -->
  <arg name="cfg" default="$(find motoman_moveit)/config/sia5_with_dhand/benchmark_config.cfg"/>

    <arg name="load_robot_description" value="true"/>
    <arg name="urdf_model" value="$(find motoman_description)/robots/sia5/sia5_with_dhand.urdf.xacro"/>
    <arg name="srdf_model" value="$(find motoman_moveit)/config/sia5_with_dhand/sia5.srdf"/>
    <arg name="joint_limits_config" value="$(find motoman_moveit)/config/sia5_with_dhand/joint_limits.yaml"/>
    <arg name="kinematics_config" value="$(find motoman_moveit)/config/sia5_with_dhand/kinematics.yaml"/>
    <arg name="controllers_config" value="$(find motoman_moveit)/config/sia5_with_dhand/controllers.yaml"/>
    <arg name="use_depth_sensor" value="false"/>
    <arg name="rviz_config" value="$(find motoman_moveit)/launch/rviz/moveit_sia5.rviz"/>
    <!-- Configuration planning library -->
    <arg name="ompl_config" value="$(find motoman_moveit)/config/sia5_with_dhand/ompl_planning.yaml"/>
    <!-- Choose planner [ompl|chomp|stomp] -->
    <arg name="planning_config" value="ompl"/>
    <!-- If you choose ompl, "use_ompl" is true. -->
    <arg name="use_ompl" value="true"/>
    <!-- If you choose stomp, "use_stomp" is true. -->
    <arg name="use_stomp" value="false"/>

  <!-- Start the database -->
  <include file="$(find motoman_moveit_config)/launch/warehouse.launch">
    <!-- <arg name="moveit_warehouse_database_path" value="~/moveit_db"/> -->
  </include>

  <!-- Start Benchmark Executable -->
  <node name="$(anon moveit_benchmark)" pkg="moveit_ros_benchmarks" type="moveit_run_benchmark" args="$(arg cfg) --benchmark-planners" respawn="false" output="screen">
    <rosparam command="load" file="$(arg kinematics_config)"/>
    <rosparam command="load" file="$(arg ompl_config)"/>
  </node>

</launch>
