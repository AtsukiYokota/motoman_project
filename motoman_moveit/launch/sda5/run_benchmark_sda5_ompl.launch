<launch>

  <!-- This argument must specify the list of .cfg files to process for benchmarking -->
  <arg name="cfg" default="$(find motoman_moveit)/config/sda5/benchmark_config.cfg"/>

  <arg name="load_robot_description" value="true"/>
  <arg name="urdf_model" value="$(find motoman_description)/robots/sda5/sda5.urdf.xacro"/>
  <arg name="srdf_model" value="$(find motoman_moveit)/config/sda5/sda5.srdf"/>
  <arg name="joint_limits_config" value="$(find motoman_moveit)/config/sda5/joint_limits.yaml"/>
  <arg name="kinematics_config" value="$(find motoman_moveit)/config/sda5/kinematics.yaml"/>
  <arg name="controllers_config" value="$(find motoman_moveit)/config/sda5/controllers.yaml"/>
  <arg name="ompl_config" value="$(find motoman_moveit)/config/sda5/ompl_planning.yaml"/>
  <arg name="moveit_controller_manager" value="sda5"/>
  <arg name="use_depth_sensor" value="false"/>
  <arg name="rviz_config" value="$(find motoman_moveit)/launch/sda5/rviz/moveit_sda5.rviz"/>
  <arg name="moveit_warehouse_database_path" value="~/moveit_sda5_db/"/>
  <!-- Load URDF -->
  <include file="$(find motoman_moveit_config)/launch/planning_context.launch">
    <arg name="load_robot_description" value="$(arg load_robot_description)"/>
    <arg name="urdf_model" value="$(arg urdf_model)"/>
    <arg name="srdf_model" value="$(arg srdf_model)"/>
    <arg name="joint_limits_config" value="$(arg joint_limits_config)"/>
    <arg name="kinematics_config" value="$(arg kinematics_config)"/>
  </include>

  <!-- Start the database -->
  <include file="$(find motoman_moveit_config)/launch/warehouse.launch">
    <arg name="moveit_warehouse_database_path" value="$(arg moveit_warehouse_database_path)"/>
  </include>

  <!-- Start Benchmark Executable -->
  <node name="$(anon moveit_benchmark)" pkg="moveit_ros_benchmarks" type="moveit_run_benchmark" args="$(arg cfg) --benchmark-planners" respawn="false" output="screen">
    <rosparam command="load" file="$(arg kinematics_config)"/>
    <rosparam command="load" file="$(arg ompl_config)"/>
  </node>

</launch>
